{
  "name": "cws-web-components",
  "version": "0.0.4",
  "description": "CWS Web Components",
  "author": "cws.digital",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/cws-web-components/cws-web-components.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/autorei/cws-web-components.git"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "docs": "stencil build --docs-readme",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "test:lint:js": "eslint --ext=js --ext=tsx --ext=ts ./src",
    "test:lint:css": "stylelint \"src/**/*.css\"",
    "prettier": "prettier --config ./.prettierrc.json --write \"src/**/*{.js,.ts,.tsx,.css}\"",
    "generate": "node scripts/stencil-generate.js"
  },
  "devDependencies": {
    "@types/jest": "24.0.15",
    "@types/puppeteer": "1.12.4",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-config-cws": "^0.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx": "^0.1.0",
    "husky": "^3.0.3",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "puppeteer": "1.17.0",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^18.3.0"
  },
  "dependencies": {
    "@stencil/core": "1.2.3",
    "classnames": "^2.2.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run docs && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts,tsx}": [
      "eslint",
      "git add"
    ],
    "*.css": [
      "stylelint",
      "git add"
    ]
  }
}
